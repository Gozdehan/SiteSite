<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    android:padding="20dp"
    tools:context="com.gozdehanozturk.sitesite.activity.NoConnectActivity">

   <ImageView
        android:id="@+id/connectImg"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:background="@drawable/wifi_off"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/connectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="@dimen/text_size"
        android:text="@string/connect"/>

    <Button
        android:id="@+id/connectBtn"
        android:padding="10dp"
        android:layout_weight="0.5"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:textSize="@dimen/normal_btn_textsize"
        android:textColor="@color/topColor"
        android:text="@string/again_btn"/>

</LinearLayout>
