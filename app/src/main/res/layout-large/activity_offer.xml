<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context="com.gozdehanozturk.sitesite.activity.OfferActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@mipmap/sg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/app_name"
            android:textSize="@dimen/large_offer_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:text="@string/offer_note"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:id="@+id/edtOneri"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="35dp"
            android:hint="@string/offer_hint"
            android:textColorHint="#b2b9b8" />

        <Spinner
            android:id="@+id/spKategori"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="40dp" />

        <Button
            android:id="@+id/btnGonder"
            android:layout_width="500dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="105dp"
            android:background="@drawable/button_background"
            android:text="GÃ–NDER"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </LinearLayout>

</LinearLayout>
