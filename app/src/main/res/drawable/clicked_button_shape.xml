        android:angle="45"
        android:centerX="29%"
        android:centerColor="#FFD9C6C6"
        android:startColor="#FFD9C6C6"
        android:endColor="#FFD9C6C6"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
